<html>
	<head>
		<% include header %>
	</head>
	<body class="claro">
		<div class="LoginForm" style="width:300px; margin-left:auto;margin-right:auto;font-size:1.1em;margin-bottom:10px;margin-top:10px;padding:10px;border: 2px solid #ababab; border-radius: 4px;">
			<h2 style="margin:0px;padding:4px;font-size:1.2em;text-align:center;background:#eee;">PATRIC LOGIN</h2>
			<form method="post" data-dojo-type="dijit/form/Form">
				<div style="padding:2px; margin:10px;">
					<input type="text" name="username"/ data-dojo-type="dijit/form/TextBox" style="width:100%" data-dojo-props='placeholder:"Your Username or Email Address"'><br/>
				</div>
				<div style="padding:2px;margin:10px;">
					<input type="password" name="password" data-dojo-type="dijit/form/TextBox" style="width:100%" data-dojo-props='placeholder:"Your Password"'/>
				</div>
				<div style="text-align:center;padding:2px;margin:10px;">
					<div type="submit" value="Submit" data-dojo-type="dijit/form/Button">Login</div>
				</div>
				<div style="font-size:.85em;">
					New to PATRIC?  <a href="/register">REGISTER HERE</a> </br>
					<a href="/reset_password">Forget Your password?</a>
				</div>
			</form>
		</div>
		<% include javascript %>
	</body>
</html>
